---
import Blobs from "../components/Blobs.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Personal Portfolio for Brady Blair | Frontend Developer"
    />
    <title>{title}</title>
    <meta
      property="og:title"
      content="Personal Portfolio for Brady Blair | Frontend Developer"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bradyblair.netlify.app/" />
    <meta property="og:image" content="/brady-meta.png" />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;700;800&family=Roboto+Mono:wght@400;700&display=swap");
    </style>
  </head>
  <body
    class="bg-bg text-white px-4 py-10 lg:px-0 sm:max-w-screen-lg sm:mx-auto antialiased overflow-x-hidden"
  >
    <Blobs />
    <Header />
    <slot />
    <Footer />
  </body>
</html>
