---
import Blobs from "@components/Blobs.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import "@fontsource-variable/inter";
import "@fontsource-variable/roboto-mono";
import interWoff2 from "@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url";

export interface Props {
  title?: string;
  canonical?: string;
  ogTitle?: string;
  description?: string;
}

const {
  title = "Brady Blair | Full Stack Web Engineer",
  canonical = "https://www.bradyblair.com",
  ogTitle = "Personal Portfolio for Brady Blair | Full Stack Web Engineer",
  description = "Personal Portfolio for Brady Blair | Full Stack Web Engineer",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content="/brady-meta.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#c06161" />
    <meta name="msapplication-TileColor" content="#b91d47" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href={canonical} />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={interWoff2}
      crossorigin
    />
  </head>

  <body
    class="bg-bg text-white px-4 py-10 lg:px-0 sm:max-w-screen-lg sm:mx-auto antialiased overflow-x-hidden"
  >
    <noscript>
      This site requires JavaScript to function properly. Please enable it to
      continue.
    </noscript>

    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-20MWVPRH1N"></script>
    <script type="text/partytown">
      // @ts-expect-error
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        // @ts-expect-error
        dataLayer.push(arguments);
      }

      // @ts-expect-error
      gtag("js", new Date());

      // @ts-expect-error
      gtag("config", "G-20MWVPRH1N");
    </script>

    <Blobs />
    <Header />
    <Breadcrumbs slug={Astro.url.pathname} />
    <main class="flex flex-col gap-y-16 sm:gap-y-32 mt-8 sm:mt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
